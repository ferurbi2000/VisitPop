@model IEnumerable<Category>
@{ 
    ViewData["Title"] = "Index";
}

<h4>Category</h4>
<a asp-action="Edit" class="btn btn-sm btn-primary">Add Category</a>
<table class="table table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Category</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
        <tr>
            <td>@c.Name</td>
            <td>@c.Description</td>
            <td>
                <form asp-action="Delete">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
