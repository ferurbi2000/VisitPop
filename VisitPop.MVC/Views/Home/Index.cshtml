@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<h4>People</h4>
<a asp-action="Edit" class="btn btn-sm btn-primary">Add Person</a>
<a asp-action="GetPerson" class="btn btn-sm btn-secondary">Get Person</a>
<table class="table table-striped table-bordered m-2">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                @*<td>@p.Id</td>*@
                <td>@p.Nombres</td>
                <td>@p.Apellidos</td>
                <td>@p.Identidad</td>
                <td>@p.Telefono</td>
                <td>
                    <form asp-action="Delete">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
