                        <div class="card-footer">
                            <div class="row align-items-center no-gutters">
                                <div class="col me-2">
                                    <i class="far fa-calendar-alt text-gray-500"></i>
                                    <small class="text-muted">Created: @String.Format("{0:d MMMM, yyyy}", p.CreatedDate)</small>
                                </div>
                                <div class="col-auto">
                                    <i class="far fa-clock fa-sm text-gray-500"></i>
                                    <small class="text-muted">@String.Format("{0:HH:mm:ss}", p.CreatedDate)</small>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="row">
            <vc:pagination values="@Model.Metadata" filters="@Model.Filters" sort-order="@Model.SortOrder" />
        </div>

    </div>
</div>
