@model AuditableEntity
<div class="card shadow mb-4">
    <div class="card-header">
        <p class="text-black-50 m-0 font-weight-bold">Audit</p>
    </div>
    <div class="card-body">
        <div class="col-md position-relative">

            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="form-check">
                <input asp-for="IsDeleted" class="form-check-input" type="checkbox" disabled />
                <label asp-for="IsDeleted" class="form-check-label"></label>
            </div>

            <hr class="line" />

            <div class="form-group">
                <span class="badge bg-primary text-white">Created</span>
                <br />
                <label>@Model.CreatedDate</label>

                <br />

                <span class="badge bg-primary text-white">Modified</span>
                <br />
                <label>@Model.LastModified</label>
            </div>

            <hr class="line" />

            <a href="#" class="link-primary">More details...</a>

        </div>
    </div>
</div>
