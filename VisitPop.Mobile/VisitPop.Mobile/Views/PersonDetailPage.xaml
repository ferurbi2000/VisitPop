<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisitPop.Mobile.Views.PersonDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Text="Edit" Command="{Binding EditItemCommand}"/>-->
        <ToolbarItem Text="Edit" Command="{Binding EditItemCommand}" CommandParameter="{Binding PersonDetailViewModel}"/>
        
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Id:" FontSize="Medium"/>
        <Label Text="{Binding Id}" FontSize="Small"/>
        <Label Text="Nombres:" FontSize="Medium"/>
        <Label Text="{Binding Nombres}" FontSize="Small"/>
        <Label Text="Apellidos:" FontSize="Medium"/>
        <Label Text="{Binding Apellidos}" FontSize="Small"/>
        <Label Text="DocIdentidad:" FontSize="Medium"/>
        <Label Text="{Binding DocIdentidad}" FontSize="Small"/>
    </StackLayout>

</ContentPage>